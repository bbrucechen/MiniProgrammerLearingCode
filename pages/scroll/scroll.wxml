<!--pages/scroll/scroll.wxml-->
<!-- 1.scroll-x：实现水平滚动 -->
<scroll-view class="container1" scroll-x>
  <view wx:for="{{11}}" class="item1">{{item}}</view>
</scroll-view>

<!-- 2.scroll-y:垂直滚动 -->
<scroll-view class="container2" scroll-y>
  <view wx:for="{{11}}" class="item2">{{item}}</view>
</scroll-view>

<!-- 3.事件 -->
<!-- bindscroll：监听滚动事件 -->
<scroll-view class="container2" scroll-y bindscroll="scroll">
  <view wx:for="{{11}}" class="item2">{{item}}</view>
</scroll-view>



